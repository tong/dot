super + d
    rofi -show drun
super + Tab
    rofi -show window

super + Return
    $TERMINAL
super + b
    $BROWSER
super + n
    $FILEMANAGER_GUI

super + o ; {b,t,n}
    {$BROWSER,$TERMINAL,$FILEMANAGER_GUI}

super + x ;  {c,e,i,r,w,x}
    {clipmenu, dmenu-exit, dmenu-nerdfont, dmenu-record, $(rofi -show window), dmenu-screenshot}

super + m ; {p,l,h,s}
    {$(playerctl play-pause),$(playerctl next),$(playerctl previous),$(playerctl stop)}

super + shift + x
    scrot "$HOME/screenshot-%Y_%m_%d_%H_%M.png" #TODO dmenu-screenshot

XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioPlay
    playerctl play
XF86AudioStop
    playerctl stop
XF86AudioPause
    playerctl pause
XF86AudioNext
    playerctl next
XF86AudioPrev
    playerctl previous

XF86MonBrightnessUp
    backlight --quiet +
XF86MonBrightnessDown
    backlight --quiet -

