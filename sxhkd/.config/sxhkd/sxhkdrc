super + Return
    $TERMINAL
super + b
    $BROWSER
super + n
    nautilus

super + d
    rofi -show run
super + Tab
    rofi -show window

super + x ;  {c,e,i,r,t,w,x}
    {clipmenu, dmenu-exit, dmenu-nerdfont, dmenu-record, i3-sensible-terminal, $(rofi -show window), dmenu-screenshot}

super + shift + x
    scrot "$HOME/screenshot-%Y_%m_%d_%H_%M.png" #TODO dmenu-screenshot

super + m ; {p,l,h,s}
    {$(playerctl play-pause),$(playerctl next),$(playerctl previous),$(playerctl stop)}

#XF86Audio{Prev,Next}
#	mpc -q {prev,next}
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioPlay
    playerctl play
XF86AudioStop
    playerctl stop
XF86AudioPause
    playerctl pause
XF86AudioNext
    playerctl next
XF86AudioPrev
    playerctl previous

super + o ; {b,c,f,n,t}
    {blender,chromium,firefox,nautilus,terminal}

