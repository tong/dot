#!/bin/sh
#
# hexdate: Prints the current date (day-month-year) in hexadecimal format.
#

day=$(date +%d)
month=$(date +%m)
year=$(date +%Y)

hex_day=$(echo "obase=16; $day" | bc)
hex_month=$(echo "obase=16; $month" | bc)
hex_year=$(echo "obase=16; $year" | bc)

echo "$hex_day-$hex_month-$hex_year"
