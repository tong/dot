#!/bin/sh
lock() {
    i3lock -c 000000 -i ~/img/wallpaper/lock_process.png
}
case "$1" in
    lock) lock;;
    logout) i3-msg exit;;
    exit) i3-msg exit;;
    suspend) lock && systemctl suspend;;
    hibernate) lock && systemctl hibernate;;
    reboot) systemctl reboot;;
    shutdown) systemctl poweroff;;
    *)
        echo "Usage: $0 {lock|logout|exit|suspend|hibernate|reboot|shutdown}"
        exit 2
esac
exit 0
