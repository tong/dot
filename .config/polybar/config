[module/apps]
    type = custom/menu

    expand-right = true

    ;format-background = #ffffff
    ;format-foreground = #000000
    format-spacing = 10

    ;label-open = "  u"
    label-open = 
    ;label-open-foreground = ${colors.foreground}

    label-close =  CANCEL
    label-close-foreground = ${colors.foreground}

    label-separator = |
    label-separator-foreground = ${colors.foreground-alt}

    menu-0-0 = REBOOT
    menu-0-0-exec = menu-open-1
    menu-0-1 = SHUTTDOWN
    menu-0-1-exec = menu-open-2

    menu-1-0 = CANCEL
    menu-1-0-exec = menu-open-0
    menu-1-1 = reboot
    menu-1-1-exec = sudo reboot

    menu-2-0 = OFF
    menu-2-0-exec = sudo poweroff
    menu-2-1 = CCCANCEL
    menu-2-1-exec = menu-open-0

[module/all-icons]
    type = custom/script
    interval = 2
    ;format-prefix = " "
    ;format-prefix-foreground = ${colors.foreground-alt}
    ;format-underline = #f90000
    ;label = AAAAAAAAAAAAAAAAA
    ;exec = echo "23"
    exec = echo "  "

[module/alsa]
    type = internal/alsa

    format-volume = <label-volume> <bar-volume>
    label-volume = 
    label-volume-foreground = ${root.foreground}

    format-muted-prefix = " "
    format-muted-foreground = ${colors.foreground-alt}
    label-muted = MUTE

    bar-volume-width = 10
    bar-volume-foreground-0 = ${root.foreground}
    bar-volume-foreground-1 = ${root.foreground}
    bar-volume-foreground-2 = ${root.foreground}
    bar-volume-foreground-3 = ${root.foreground}
    bar-volume-foreground-4 = ${root.foreground}
    bar-volume-foreground-5 = ${root.foreground}
    bar-volume-foreground-6 = ${root.foreground}
    bar-volume-gradient = true
    bar-volume-indicator = |
    bar-volume-indicator-font = 2
    bar-volume-fill = ─
    bar-volume-fill-font = 2
    bar-volume-empty = ─
    bar-volume-empty-font = 2
    bar-volume-empty-foreground = ${colors.foreground-alt}

