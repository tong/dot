    foreground = ${colors.foreground}

    border-size = 1
    border-color = #141419

    modules-left = i3
    modules-center = xwindow 
    #modules-right = filesystem xbacklight alsa pulseaudio memory cpu temperature wlan eth battery date powermenu
    modules-right = alsa system-cpu-loadavg filesystem memory cpu eth network-public-ip network-speed time powermenu

    tray-position = right
    tray-padding = 4

    ;wm-restack = i3

    ;override-redirect = true

    ;scroll-up = bspwm-desknext
    ;scroll-down = bspwm-deskprev

    ;scroll-up = i3wm-wsnext
    ;scroll-down = i3wm-wsprev

    cursor-click = pointer
    cursor-scroll = ns-resize

